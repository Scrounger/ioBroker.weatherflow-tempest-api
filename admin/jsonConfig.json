{
	"i18n": true,
	"type": "panel",
	"items": {
		"updateInterval": {
			"type": "number",
			"label": "updateInterval",
			"min": 10,
			"step": 1,
			"sm": 12,
			"md": 2
		},
		"dividerCredentials": {
			"newLine": true,
			"type": "header",
			"text": "login data",
			"size": 2
		},
		"stationId": {
			"newLine": true,
			"type": "text",
			"label": "stationId",
			"sm": 12,
			"md": 2
		},
		"accessToken": {
			"type": "password",
			"label": "accessToken",
			"sm": 12,
			"md": 4
		},
		"dividerUnits": {
			"newLine": true,
			"type": "header",
			"text": "units",
			"size": 2
		},
		"unitTemperature": {
			"newLine": true,
			"type": "select",
			"label": "unitTemperature",
			"options": [
				{
					"label": "c",
					"value": "c"
				},
				{
					"label": "f",
					"value": "f"
				}
			],
			"sm": 12,
			"md": 1
		},
		"unitWind": {
			"type": "select",
			"label": "unitWind",
			"options": [
				{
					"label": "mph",
					"value": "mph"
				},
				{
					"label": "kph",
					"value": "kph"
				},
				{
					"label": "kts",
					"value": "kts"
				},
				{
					"label": "mps",
					"value": "mps"
				},
				{
					"label": "bft",
					"value": "bft"
				},
				{
					"label": "lfm",
					"value": "lfm"
				}
			],
			"sm": 12,
			"md": 1
		},
		"unitPressure": {
			"type": "select",
			"label": "unitPressure",
			"options": [
				{
					"label": "mb",
					"value": "mb"
				},
				{
					"label": "inhg",
					"value": "inhg"
				},
				{
					"label": "mmhg",
					"value": "mmhg"
				},
				{
					"label": "hpa",
					"value": "hpa"
				}
			],
			"sm": 12,
			"md": 1
		},
		"unitPrecipitation": {
			"type": "select",
			"label": "unitPrecipitation",
			"options": [
				{
					"label": "mm",
					"value": "mm"
				},
				{
					"label": "cm",
					"value": "cm"
				},
				{
					"label": "in",
					"value": "in"
				}
			],
			"sm": 12,
			"md": 1
		},
		"unitDistance": {
			"type": "select",
			"label": "unitDistance",
			"options": [
				{
					"label": "km",
					"value": "km"
				},
				{
					"label": "mi",
					"value": "mi"
				}
			],
			"sm": 12,
			"md": 1
		},
		"dividerForecast": {
			"newLine": true,
			"type": "header",
			"text": "weather forecast",
			"size": 2
		},
		"currentEnabled": {
			"type": "checkbox",
			"label": "currentEnabled",
			"newLine": true,
			"sm": 12,
			"md": 1
		},
		"hourlyEnabled": {
			"type": "checkbox",
			"label": "hourlyEnabled",
			"sm": 12,
			"md": 1
		},
		"hourlyMax": {
			"type": "number",
			"label": "hourlyMax",
			"disabled": "!data.hourlyEnabled",
			"min": 1,
			"max": 220,
			"sm": 12,
			"md": 1
		},
		"dailyEnabled": {
			"type": "checkbox",
			"label": "dailyEnabled",
			"sm": 12,
			"md": 1
		},
		"dailyMax": {
			"type": "number",
			"label": "dailyMax",
			"disabled": "!data.dailyEnabled",
			"min": 0,
			"max": 20,
			"sm": 12,
			"md": 1
		},
		"donation_link": {
			"type": "staticLink",
			"text": "You like the adapter? Then support me.",
			"sm": 12,
			"button": true,
			"newLine": true,
			"href": "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=VWAXSTS634G88&source=url",
			"style": {
				"justifyContent": "flex-start !important"
			}
		}
	}
}